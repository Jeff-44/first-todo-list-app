<%- include("partials/header.ejs") %>

    <div class="content">
        <div class="title">
            <h1>Work tasks</h1>
        </div>
        <div class="tasks">
            <% if(!locals.tasks || tasks.length == 0){ %>
            
                <p>No tasks yet</p>
            
            <% } else{ %>
                    
                <ul>
                    <% tasks.forEach((task)=>{ %>
                        <li><input type="checkbox" name="" id=""> <label for=""><%= task %></label><hr> </li>
                    <% }); %>
                </ul>

                <% } %>
            <div class="addTask">
                <form action="/work" method="POST">
                    <input type="text" name="task" id="" placeholder="New task">
                    <button>+</button>
                </form>
            </div>
        </div>
    </div>
<%- include("partials/footer.ejs") %>
